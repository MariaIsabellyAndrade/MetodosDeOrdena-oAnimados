<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to top, #c7ecee, #dff9fb);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.heapsort.HelloController">
   <children>
      <Label layoutX="130" layoutY="30" text="Animação do Heap Sort" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

      <Button fx:id="bt0" layoutX="50" layoutY="150" prefWidth="60" prefHeight="40" style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;" text="0" />
      <Button fx:id="bt1" layoutX="120" layoutY="150" prefWidth="60" prefHeight="40" style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;" text="1" />
      <Button fx:id="bt2" layoutX="190" layoutY="150" prefWidth="60" prefHeight="40" style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;" text="2" />
      <Button fx:id="bt3" layoutX="260" layoutY="150" prefWidth="60" prefHeight="40" style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;" text="3" />
      <Button fx:id="bt4" layoutX="330" layoutY="150" prefWidth="60" prefHeight="40" style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;" text="4" />
      <Button fx:id="bt5" layoutX="400" layoutY="150" prefWidth="60" prefHeight="40" style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;" text="5" />

      <Button fx:id="btIniciar" layoutX="250" layoutY="280" text="Iniciar" onAction="#acaoIniciar"
              style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);">
         <style>
            .button:hover {
            -fx-background-color: #e67e22; /* Laranja mais escuro ao passar o mouse */
            }
         </style>
      </Button>

   </children>
</AnchorPane>